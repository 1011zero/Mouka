@model Mouka.Web.Models.ForgetPasswordModel
@{
    ViewBag.Title = "ForgetPassword";
}

<!-- breadcrumb end here -->
<div class="bread-crumb">
    <div class="container">
        <div class="matter">
            <div class="pull-left">
                <ul class="list-inline">
                    <li><a href="index.html">Home</a></li>
                    <li><a href="login.html">Reset Password</a></li>
                </ul>
            </div>
            <div class="pull-right">

            </div>
        </div>
    </div>
</div>
<!-- breadcrumb end here -->
<!-- faq start here -->
<div class="commontop">
    <div class="container">
        <div class="col-md-12 col-sm-12 col-xs-12 login padd0">
            <div class="row">

                <div class="col-md-6 col-sm-6 col-xs-12">
                    <h1>Reset Password</h1>

                    @using (Html.BeginForm("ForgetPassword", "User", FormMethod.Post, new { id = "resetPassword", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <i class="la la-envelope-o"></i>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", id = "input-email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <i class="la la-unlock"></i>
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <i class="la la-unlock"></i>
                            @Html.PasswordFor(m => m.RepeatPassword, new { placeholder = "Repeat Password", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.RepeatPassword, "", new { @class = "text-danger" })
                        </div>


                        <button id="resetPasswordBtn" type="submit" class="btn btn-primary btn-block">Confirm</button>
                    }
                </div>

            </div>
        </div>
    </div>
</div>
<!-- faq end here -->